generator client {
  provider = "prisma-client-js"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  username  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  history History[]
}

model History {
  id           String   @id @default(uuid())
  userId       String
  videoId      String
  title        String
  thumbnail    String
  channelTitle String
  duration     String
  viewCount    String
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([videoId])
}
